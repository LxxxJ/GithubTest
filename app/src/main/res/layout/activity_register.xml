<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <EditText
        android:id="@+id/register_edit1"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:paddingLeft="60dp"/>
    <EditText
        android:id="@+id/register_edit2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/register_edit1"
        android:layout_marginBottom="20dp"
        android:paddingLeft="60dp"/>
    <EditText
        android:id="@+id/register_edit3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register_edit1"
        android:layout_marginTop="20dp"
        android:paddingLeft="100dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号"
        android:textSize="25dp"
        android:layout_alignLeft="@+id/register_edit2"
        android:layout_above="@+id/register_edit2"
        android:layout_marginBottom="-40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        android:textSize="25dp"
        android:layout_alignLeft="@+id/register_edit1"
        android:layout_above="@+id/register_edit1"
        android:layout_marginBottom="-40dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认密码"
        android:textSize="25dp"
        android:layout_alignLeft="@+id/register_edit1"
        android:layout_above="@+id/register_edit3"
        android:layout_marginBottom="-60dp"
        />

    <Button
        android:id="@+id/register_btn1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/register_edit3"
        android:layout_marginTop="20dp"
        android:text="注册"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>