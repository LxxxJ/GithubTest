<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/login_edit1"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:paddingLeft="60dp"/>
        <EditText
            android:id="@+id/login_edit2"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/login_edit1"
            android:layout_marginBottom="20dp"
            android:paddingLeft="60dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:textSize="25dp"
            android:layout_alignLeft="@+id/login_edit2"
            android:layout_above="@+id/login_edit2"
            android:layout_marginBottom="-40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textSize="25dp"
            android:layout_alignLeft="@+id/login_edit1"
            android:layout_above="@+id/login_edit1"
            android:layout_marginBottom="-40dp"
            />

        <Button
            android:id="@+id/login_btn1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/login_edit1"
            android:layout_marginTop="20dp"
            android:text="注册"
            android:layout_alignLeft="@+id/login_edit2"/>
        <Button
            android:id="@+id/login_btn2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/login_edit1"
            android:layout_marginTop="20dp"
            android:text="登录"
            android:layout_alignRight="@+id/login_edit2"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>